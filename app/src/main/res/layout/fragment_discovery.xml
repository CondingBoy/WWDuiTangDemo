<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/discover_view_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <Button
                    style="@style/discovery_button"
                    android:drawableTop="@mipmap/icon_album"
                    android:text="达人" />

                <Button
                    style="@style/discovery_button"
                    android:drawableTop="@mipmap/icon_collection"
                    android:text="Club" />

                <Button
                    style="@style/discovery_button"
                    android:drawableTop="@mipmap/icon_notification"
                    android:text="活动" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="流行趋势"
                android:textColor="@android:color/darker_gray" />

            <include layout="@layout/horizontal_scroolview" />
        </LinearLayout>

        <include layout="@layout/category" />
    </LinearLayout>
</ScrollView>