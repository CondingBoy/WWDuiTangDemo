<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="helloworld.example.administrator.wwduitangdemo.MainActivity">
    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/pager_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        custom:pstsIndicatorColor="@android:color/holo_red_light"
        android:background="#f5f3f3"
        android:textColor="@android:color/black"
        custom:pstsIndicatorHeight="4dp"
        custom:pstsShouldExpand="true"
        custom:pstsDividerColor="#f5f3f3"
        custom:pstsUnderlineHeight="0dp"
        ></com.astuetz.PagerSlidingTabStrip>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
